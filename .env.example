# ============================================================
# TextSummarize - Environment Configuration Template
# Copy this file to .env and configure for your environment
# ============================================================

# ============================================================
# Environment Setup
# ============================================================
ENV=development  # Options: development, staging, production
DEBUG=False      # Enable debug mode (true/false)

# ============================================================
# API Configuration
# ============================================================
PORT=8000
API_HOST=0.0.0.0
LOG_LEVEL=INFO   # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================
# Model Configuration
# ============================================================
MODEL_NAME=facebook/bart-large-cnn
DEVICE=cpu       # Options: cpu, cuda (GPU support)
MAX_INPUT_TOKENS=2048

# ============================================================
# Summarization Defaults
# ============================================================
DEFAULT_SUMMARIZATION_METHOD=extractive  # Options: extractive, abstractive
DEFAULT_NUM_SENTENCES=3
MIN_NUM_SENTENCES=1
MAX_NUM_SENTENCES=10
MIN_TEXT_LENGTH=50
MAX_TEXT_LENGTH=50000

# ============================================================
# Performance Tuning
# ============================================================
ENABLE_CACHE=True
CACHE_EXPIRY=3600  # Cache expiry in seconds (1 hour)
API_WORKERS=4      # Number of API worker processes
WORKERS=4          # Number of Gunicorn workers

# ============================================================
# Feature Flags
# ============================================================
ENABLE_BATCH_PROCESSING=True
ENABLE_FILE_UPLOAD=True
ENABLE_URL_PROCESSING=False    # Future feature
ENABLE_API=True                # Enable FastAPI REST endpoints

# ============================================================
# Streamlit Configuration
# ============================================================
STREAMLIT_PAGE_TITLE=TextSummarize
STREAMLIT_PAGE_ICON=ðŸ“„
STREAMLIT_LAYOUT=wide
STREAMLIT_INITIAL_SIDEBAR_STATE=expanded

# ============================================================
# Production Deployment
# ============================================================
WORKER_CLASS=uvicorn.workers.UvicornWorker
TIMEOUT=120
KEEP_ALIVE=5

# ============================================================
# Application Metadata
# ============================================================
APP_NAME=TextSummarize
APP_VERSION=1.0.0

# ============================================================
# File Size Limits
# ============================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes

# ============================================================
# Docker & Cloud Configuration
# ============================================================
# DOCKER_REGISTRY=your-registry.azurecr.io
# AWS_REGION=us-east-1
# ENABLE_MONITORING=False
